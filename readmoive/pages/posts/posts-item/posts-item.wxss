.posts-container {
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    padding-bottom: 5rpx;
    border-bottom: 10px solid #dbdbdb;
    background-color: #fff;
}

.posts-author-date {
    padding: 10rpx 0 20rpx 10rpx;
}

.posts-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.posts-date {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}

.posts-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.posts-image {
    width: 100%;
    height: 340rpx;
    margin: auto 0;
}

.posts-content {
    color: #666;
    font-size: 28rpx;
    margin: 10px;
    letter-spacing: 2rpx;
}

.posts-like {
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
    margin-bottom: 10px;
}

.posts-like-image {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.posts-like-font {
    vertical-align: middle;
    margin-right: 10px;
}